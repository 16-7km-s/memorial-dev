{{- $scratch := newScratch }}

<!-- 作者 -->
<!-- 我不会修，直接把partial调用删了，现在作者必须是列表 -->
{{- if not (.Param "hideAuthor") -}}
{{- $scratch.Add "meta" (slice ((delimit (.Params.author | default site.Params.author) "，" ))) }}
{{- end -}}

{{- $scratch.Add "meta" (slice (partial "edit_post.html" .)) -}} <!-- “反馈” -->

<!-- 创建时间 -->
{{- if not .Date.IsZero -}}
{{- $scratch.Add "meta" (slice (printf "<span title='%s'>%s</span>" (.Date) (.Date | time.Format (default "January 2, 2006" site.Params.DateFormat)))) }}
{{- end }}

<!-- 更新时间 -->
{{- if gt .Lastmod .Date -}}
{{- $scratch.Add "meta" (slice (printf "<span title='%s'>&nbsp;/&nbsp;%s&nbsp;更新</span>" (.Lastmod) (.Lastmod | time.Format (default "January 2, 2006" .Site.Params.DateFormat)))) }}
{{- end }}

<!-- 手动分隔符 -->
{{- $scratch.Add "meta" (slice (printf "&emsp;·&emsp;")) }}

<!-- 阅读时长 -->
{{- if (.Param "ShowReadingTime") -}}
{{- $scratch.Add "meta" (slice (i18n "read_time" .ReadingTime | default (printf "%d min" .ReadingTime))) }}
{{- end }}

<!-- 字数统计 -->
{{- if (.Param "ShowWordCount") -}}
{{- $scratch.Add "meta" (slice (i18n "words" .WordCount | default (printf "%d words" .WordCount))) }}
{{- end }}

<!-- 啥也不是，转字符串用的 -->
{{- with ($scratch.Get "meta") }}
{{- delimit . "" | safeHTML -}}
{{- end -}}